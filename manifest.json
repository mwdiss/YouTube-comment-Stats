{
  "manifest_version": 3,
  "name": "Comments Enhancer for YouTube",
  "version": "2.0.0",
  "description": "Full Suite: Move comments to sidebar (with memory) + Join Date/Subs stats.",
  "permissions": [
    "scripting", 
    "activeTab", 
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}