{
  "manifest_version": 3,
  "name": "YT Stats Comment Info",
  "version": "1.0.0",
  "permissions": [
    "scripting", 
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}